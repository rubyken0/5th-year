REVISION Q1

print("Welcome to the pet food cost calculator.\n")
print("This calculator finds the total cost of pet food\n")
uName=input('Enter your name: ')
total_cost = 0
items_count = 1
print(f'Order processed by {uName.capitalize()}')
petFood_num=int(input('How many types of pet food are being purchased? '))
while petFood_num <0:
        print('Invalid number')
        break

for i in range(petFood_num):
    items_count=i+1
    
    price_of_item = float(input(f"Enter the price of item {items_count}: €"))

    total_cost+= price_of_item
print(f"You entered {items_count} item(s) and the total is €{round(total_cost,2)}")

uPay=float(input('Enter amount of money the customer is paying: '))
change=uPay-total_cost
amount_owed=total_cost-uPay
if uPay>= total_cost:
    print(f'Payment complete, change due: €{round(change,2)}')
else:
    print(f'Not enough money,customer still owes: €{round(amount_owed,2)}')
    

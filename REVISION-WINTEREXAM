    REVISION q3

print('Welcome to the phone credit top-up system.\n') #this program allows customers to top up their phone credit
total_cost=0
i=1
name=input('Enter your name: ')
print(f'Top up processed by: {name.capitalize()}\n')
phoneAmount=int(input('Enter amount of phones that need to be topped up: '))
while phoneAmount<1:
    print('Invalid entry')
    break
for i in range(phoneAmount):
    i+=1
    top_up=float(input(f'enter the top-up amount for customer {i}: €'))
    total_cost+=top_up
print(f'The total amount due: €{round(total_cost,2)}')

payment=float(input('Enter customer money amount used: €'))
change=payment-total_cost
amount_owed=total_cost-payment

if payment==total_cost:
    print('Exact payment recieved. Thank you!')
elif payment>total_cost:
    print(f'All payments recieved. Change due: €{round(change,2)}')
else:
    print(f'More money needed to cover top-ups. Amount owed: €{round(amount_owed,2)}')
    
REVISION Q4

#Student name:
library_members=['Sarah','John','Emma','Aidan','Grace','Daniel','Laura','Sophie','Ben','Megan']
borrower=input('Enter name of person who wants to borrow a book: ').lower()
if borrower in map(str.casefold,library_members):
    print(borrower,'is a registered library member.')
else:
    print(borrower,'is not a registered library member.')
if borrower not in map(str.casefold,library_members):
    register=input('Would you like to register as a new member, y/n? ')
if register == 'y':
    library_members.append(borrower)

#library_members.append(name)
print(library_members.sort())

#leavig cert2024 fruit



from random import choice
fruits=['apple','cherry','orange']
random_fruit_1=choice(fruits)
random_fruit_2=choice(fruits)
random_fruit_3=choice(fruits)
print('random fruit 1:',random_fruit_1)
print('random fruit 2:',random_fruit_2)
print('random fruit 3:',random_fruit_3)
#iii
print()
if random_fruit_1=='cherry':
    print('first fruit is cherry')
#iv
if random_fruit_1 == random_fruit_2:
    print('First pair match')
#v
if random_fruit_1=='cherry' and random_fruit_2=='cherry':
    print('First pair are cherries')
if (random_fruit_1)==(random_fruit_2) or (random_fruit_3)==(random_fruit_1) or (random_fruit_2)==(random_fruit_3):
    print('matching pair')
#vii
#random_fruit=choice(fruits)
apple_count=0  #count for everything being counted
cherry_count=0
orange_count=0
for i in range (100):  #we know we want it to go 100 times  #i is each value of 100
    random_fruit=choice(fruits) #creating variable picking out of fruits randomly
    if random_fruit=='apple':      #making condtion where if randomfruit is a certain fruit you add 1 to counter
        apple_count+=1
    elif random_fruit=='cherry':
        cherry_count+=1
    else:
        orange_count+=1
print('apple',apple_count)#just printing out count
print('cherry',cherry_count)
print('orange',orange_count)
    


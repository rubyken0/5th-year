#i adding names to the lists
guest_list = ['Alice','Kevin','Maria','Brian','Ciara','Luke','Orla','James','Sophia','Tom']
banned_list = ['Ethan','Carla']
#ii
#a uses input statment to allow user to enter their name then removes all spaces and capitalizes it so it is compatible with the items in the list so the code can check correctly
name=input('Enter the name of the person trying to enter the event: ').strip().capitalize()
#b checking using conditional statment if name is in the banned list 
if name in banned_list:
    print(f'\n{name} is in banned list, do not allow them in.')
#c    checks if name is in the guest list using if statement
elif name in guest_list:
    print(f'\n{name} is on the guest list.')
#iii checks if name is not in guest list and banned list and is so allows user to enter if they would like to register and if yes adds their name to the end of the list then printd the list alphabetically and the amountof names int eh list
elif name not in guest_list and name not in banned_list:
    print(f'\n{name} is not on the guest list.')
    register=input('\nWould you like to register to be on the guest list: y/n: ')
    if register=='y':
        guest_list.append(name)
    else:
        print('Okay, goodbye!')
    guest_list.sort()
    print('The updated guest list is: \n')
    print('The number of people in the list is: ',len(guest_list))
    print(guest_list)

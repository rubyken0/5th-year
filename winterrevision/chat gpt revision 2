#b
import sys
#1 creating a list of the members
members=['Liam','Holly','Evan','Zara','Mia','Adam','Saoirse']
#7
game_price=4
total_cost=0
print('Welcome to the Video Game rental system')
#2 using input statement to ask user what their name is
name=input('\nEnter your name: ').strip().capitalize()
#3  using if statement to check if the variabke name is in members list
if name in members:
    print('You are a registered member')
#4  using if statement checking if they are not in the list then asking if they want to register and adding their name to the list, if no code ends
else:
    print('Not registered')
    register=input('Would you like to register; y/n:  ')
    if register=='y':
        members.append(name)
        members.sort()
        print('\nThe updated list is: ')
        print(members)
    else:
        sys.exit()
        
#9 printing sorted list above ^

#5 and 6  using while loop to ask how mant games they want and asking until they enter a valid number using the while loop
        
while True:
    video_game=int(input('\nHow many games do you want to rent (€4)?  '))
    if video_game<=0:
        print('Invalid')
    else:
        break
#8  using for loop to add the game price for every 'game' amount stated in the variable video_game
for i in range(1,video_game+1):
    total_cost+=game_price
#9 printing the rounded total
print(f'\nThe total cost is : €{round(total_cost,2)}')
